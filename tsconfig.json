{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src/**/*",
    "./src/**/*.json"
  ]
}
